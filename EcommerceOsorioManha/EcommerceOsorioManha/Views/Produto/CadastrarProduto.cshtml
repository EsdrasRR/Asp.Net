@model EcommerceOsorioManha.Models.Produto

<div>

    @using (Html.BeginForm("CadastrarProduto", "Produto", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
    {
        <fielset>
            <legend>Cadastrar produto</legend>
            @Html.ValidationSummary(true, null, new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.Nome, new { @class = "control-label col-sm-2" })
                <div class="col-sm-6">
                    @Html.TextBoxFor(model => model.Nome,
                         new { @class = "form-control", @placeholder = "Nome do Produto" })

                    @Html.ValidationMessageFor(model => model.Nome, null,
                         new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Descricao, new { @class = "control-label col-sm-2" })
                    <div class="col-sm-6">
                        @Html.TextBoxFor(model => model.Descricao,
                             new { @class = "form-control", @placeholder = "Descrição do Produto" })

                        @Html.ValidationMessageFor(model => model.Nome, null,
                             new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Preco, new { @class = "control-label col-sm-2" })
                        <div class="col-sm-6">
                            @Html.TextBoxFor(model => model.Preco,
                                 new { @class = "form-control", @placeholder = "Preço do Produto" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.Categoria, new { @class = "control-label col-sm-2" })
                            <div class="col-sm-6">
                                @Html.DropDownList("Categorias", null, "-- SELECIONE --", new { @class = "form-control" })

                            </div>
                        </div>

                        <div class="form-group">
                            @Html.Label("Imagem do produto",
                                     new { @class = "control-label col-sm-2" })
                            <div class="col-sm-10">
                                <input type="file" name="fupImagem" />
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-sm-offset-2 col-sm-10">
                                <input type="submit" value="Cadastrar" class="btn btn-primary" />
                            </div>
                        </div>

        </fielset>
    }






</div>