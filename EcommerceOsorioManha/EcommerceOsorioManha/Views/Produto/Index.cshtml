
@{
    Layout = null;
    DateTime data = ViewBag.Data;
    List<EcommerceOsorioManha.Models.Produto> produtos = ViewBag.Produtos;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Gerenciamento de Produtos</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        @Html.ActionLink("Ecommerce UP", "Index", "Produto", null, new { @class = "mavbar-brand" })
    </nav>

    <div id="content" class="container" style="margin-top:30px">

        <h1>Gerenciamento de Produtos</h1>
        @*<a href="~/Views/Produto/Cadastrar">Cadastrar Produto</a>*@

        @* Link em MVC | Razor *@
        @Html.ActionLink("Cadastrar Produto", "CadastrarProduto", "Produto")


        <table class="table table-hover table-striped" style="margin-top:30px">
            <tr>
                <th>Nome</th>
                <th>Preço</th>
                <th>Categoria</th>
                <th>Descrição</th>
                <th></th>
                <th></th>
            </tr>
            @foreach (EcommerceOsorioManha.Models.Produto produtoCadastrado in produtos)
            {
                <tr>
                    <td>@produtoCadastrado.Nome</td>
                    <td>@produtoCadastrado.Preco</td>
                    <td>@produtoCadastrado.Categoria</td>
                    <td>@produtoCadastrado.Descricao</td>
                    <td>
                        @Html.ActionLink("Remover", "RemoverProduto", "Produto",
                       new { id = produtoCadastrado.ProdutoId }, null)
                    </td>
                    <td>@Html.ActionLink("Alterar", "AlterarProduto", "Produto", new { id = produtoCadastrado.ProdutoId }, null)</td>
                </tr>


            }
        </table>

        <p>Dados atualizados às: <b>@data</b></p>
    </div>


    <hr style="margin-top:30px" />

    <footer style="text-align:center;">
        <p> &copy; @DateTime.Now.Year - Desenvolvido por Esdras Rafael da Rocha</p>
    </footer>

</body>
</html>
