@using EcommerceOsorioManha.DAL

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-black bg-primary">
        @Html.ActionLink("Ecommerce UP", "Home", "Usuario", null, new { @class = "navbar-brand" })

        <ul class="navbar-nav ml-auto">
            <div style="margin:4px">
                <li class="nav-item">
                    <a href="~/Exibir/CarrinhoCompras" class="btn btn-info">
                        Carrinho
                        <span class="badge badge-light">
                            @ItemVendaDAO.RetornarQuantidadeItensCarrinho()
                        </span>
                    </a>
                </li>
            </div>
        </ul>


    </nav>

    <div id="content" class="container" style="margin-top:30px">

        @RenderBody()

    </div>

    <hr style="margin-top:30px" />
    <footer style="text-align:center;">
        <p> &copy; @DateTime.Now.Year - Desenvolvido por Esdras Rafael da Rocha</p>
    </footer>

</body>
</html>

