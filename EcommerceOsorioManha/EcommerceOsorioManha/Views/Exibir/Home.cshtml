@model IEnumerable<EcommerceOsorioManha.Models.Produto>
@using EcommerceOsorioManha.Models

@{
    ViewBag.Title = "Home";
    List<Categoria> categorias = ViewBag.Categorias;
}

<ul style="text-align:center; margin-top: 25px; margin-bottom: 25px" class="nav nav-tabs">
    @foreach (Categoria categoria in categorias)
    {
        <li class="nav-item">
            @Html.ActionLink(categoria.Nome, "Home", "Exibir", new { id = categoria.CategoriaID }, new { @class = "nav-link" })
        </li>
    }
</ul>

<div class="row" style="margin-top:30px">
    @foreach (var produto in Model)
    {
        <div class="col-sm-4" style="text-align:center; margin-bottom:40px">
            <div>@produto.Nome</div>
            <img src="~/Imagens/@produto.Imagem" alt="Imagem do produto" style="width:150px" , height:150px" />
            <br />
            <div> Preço: R$@produto.Preco </div>
            @Html.ActionLink("Detalhes", "Detalhes", new {id= produto.ProdutoId })
        </div>
    }
</div>